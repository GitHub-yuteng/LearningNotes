<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <!--需要配置 persistence-unit节点
        name：持久化单元名称
        transaction：事务管理的方式
            JTA:分布式事务管理
            RESOURCE_LOCAL:本地事务管理
    -->
    <persistence-unit name="MyJpa" transaction-type="RESOURCE_LOCAL">
        <!--JPA 实现方式-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!--可选配置：配置jpa实现放的配置-->
        <properties>
            <!--数据库信息
               用户名：javax.persistence.jdbc.user
               密码：javax.persistence.jdbc.password
               驱动：javax.persistence.jdbc.driver
               数据库地址：javax.persistence.jdbc.url
            -->
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa?serverTimezone=GMT%2B8"/>

            <!--配置jpa实现方Hibernated的配置信息
                显示sql：hibernate.show_sql
                自动创建数据库表：hibernate.hbm2ddl.auto
                    create：程序运行时创建数据库表(如果有表，先删除表再创建)：drop table if exists cst_customer
                    update：程序运行时创建表(如果有表，不会创建表)：
                    none; 不会创建表（数据库没有表则报错）
            -->
            <property name="hibernate.show_sql" value="true"/>
            <!--以 JPA 文件为准-->
            <!--<property name="hibernate.hbm2ddl.auto" value="update"/>-->
        </properties>
    </persistence-unit>
</persistence>