<!--    <aop:config>
        <aop:pointcut id="pointcut" expression=""/>
        <aop:advisor advice-ref="txAdvice" pointcut-ref="pointcut"/>
    </aop:config>-->


    <!--7.声明式事务 -->

    <!-- 8. 配置包扫描-->
    <context:component-scan base-package="JPA.SpringDataJpa"></context:component-scan>
</beans>